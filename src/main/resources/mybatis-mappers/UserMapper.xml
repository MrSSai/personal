<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.knowsbox.dao.UserDao">
	<resultMap id="baseResultMap" type="cn.knowsbox.model.User" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="nickname" property="nickname" jdbcType="VARCHAR" />
		<result column="mobile" property="mobile" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="field">
		username, password, salt, nickname, deptid, avatar, mobile, phone, email, birthday, gender, status, createTime, updateTime, recordstatus, ismobile, isdevice,
	</sql>
	<sql id="saveValue">
		#{username}, #{password}, #{salt}, #{nickname}, #{deptid}, #{avatar}, #{mobile}, #{phone}, #{email}, #{birthday}, #{gender}, #{status}, now(), now(),#{recordstatus},#{ismobile},#{isdevice}
	</sql>
	<sql id="where">
		<where>
			<if test="params.username != null and params.username != ''">
				and t.username like concat('%', #{params.username}, '%')
			</if>
			<if test="params.nickname != null and params.nickname != ''">
				and t.nickname like concat('%', #{params.nickname}, '%')
			</if>
			<if test="params.status != null and params.status != ''">
				and t.status = #{params.status}
			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from sys_user t
		<include refid="where" />
	</select>

	<select id="list" resultType="User">
		select * from sys_user t
		<include refid="where" />
		${params.orderBy}
        limit #{offset}, #{limit}
	</select>

	<!--13810114730 孟-->
	<!-- id 应该与方法名一致-->
	<insert id="saveUserRoles">
		<!-- oracle等不支持id自增长的，可根据其id生成策略，先获取id

        <selectKey resultType="int" order="BEFORE" keyProperty="id">
              select seq_user_id.nextval as id from dual
        </selectKey>

        -->
		insert into sys_role_user(roleId, userId) values
		<foreach collection="roleIds" item="roleId" separator=",">
			(#{roleId}, #{userId})
		</foreach>
	</insert>

	<update id="update">
		update sys_user t
		<set>
-- 			where是使用的 prefixOverrides（前缀）， set是使用的 suffixOverrides （后缀）
			<if test="username != null">
				username = #{username},
			</if>
			<if test="nickname != null">
				nickname = #{nickname},
			</if>
			<if test="avatar != null">
				avatar = #{avatar},
			</if>
			<if test="deptid != null">
				deptid = #{deptid},
			</if>
			<if test="phone != null">
				phone = #{phone},
			</if>
			<if test="mobile != null">
				mobile = #{mobile},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
			<if test="birthday != null">
				birthday = #{birthday},
			</if>
			<if test="gender != null">
				gender = #{gender},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="ismobile != null">
				ismobile = #{ismobile},
			</if>
			<if test="isdevice != null">
				isdevice = #{isdevice},
			</if>
			updateTime = #{updateTime}
		</set>
		where t.id = #{id}
	</update>

	<select id="findByPage" resultMap="baseResultMap">
		select *
		from sys_user
	</select>
</mapper>